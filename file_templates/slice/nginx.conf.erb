user  www-data;
worker_processes  4;  

events {
    worker_connections  1024;
}


http {
    # PASSENGER START
    passenger_root /opt/ruby-enterprise-1.8.7/lib/ruby/gems/1.8/gems/passenger-2.2.11;
    passenger_ruby /opt/ruby-enterprise-1.8.7/bin/ruby;
    # PASSENGER END 
    passenger_max_pool_size 10;


    include       mime.types;
    default_type  application/octet-stream;

    sendfile       on;
    tcp_nopush     on;
    client_max_body_size  10M;

    keepalive_timeout  65;

    gzip  on;
    gzip_types  text/css text/xml text/plain application/x-javascript application/atom+xml application/rss+xml;


    include /etc/nginx/sites-enabled/*;
}
