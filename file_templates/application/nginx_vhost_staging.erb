server {
  listen 80;
  server_name st.<%= sub_domain %>.<%= domain %>;
  root <%= current_path %>/public;
  access_log <%= shared_path %>/log/nginx-<%= domain %>-<%= sub_domain %>.log;
  error_log <%= shared_path %>/log/nginx-error-<%= domain %>-<%= sub_domain %>.log;
  passenger_enabled on;
  rails_env <%= stage %>;

  include /etc/nginx/_maintenance.include;
}
